@model HomeDetailsViewModel
@{
    //Part:29
    //Layout = "~/Views/Shared/_Layout.cshtml";      remove for _ViewStart.cshtml  Part:30
    ViewBag.Title = "Employee Details";
}

@* Part: 34 *@
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/noimage.jpg" />

                <h4>Employee ID: @Model.Employee.Id</h4>
                <h4>Email: @Model.Employee.Email</h4>
                <h4>Department: @Model.Employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                @*Part:35*@
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

@* Part: 29 *@
@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}

